{
    "timeframes": {
        "1h": {
            "interval": "hourly",
            "lookback_window": 168,
            "forecast_periods": 24,
            "description": "7 days in hours"
        },
        "4h": {
            "interval": "4hour",
            "lookback_window": 180,
            "forecast_periods": 6,
            "description": "30 days in 4-hour periods"
        },
        "daily": {
            "interval": "daily",
            "lookback_window": 365,
            "forecast_periods": 7,
            "description": "1 year of daily data"
        },
        "weekly": {
            "interval": "weekly",
            "lookback_window": 52,
            "forecast_periods": 4,
            "description": "1 year in weeks"
        }
    },
    "model_configs": {
        "rf": {
            "base_params": {
                "n_estimators": 200,
                "random_state": 42
            },
            "tune_params": {
                "n_estimators": [100, 200, 300],
                "max_depth": [10, 20],
                "min_samples_split": [2, 5, 10]
            }
        },
        "svr": {
            "base_params": {
                "kernel": "rbf",
                "C": 1.0
            },
            "tune_params": {
                "C": [0.1, 1.0, 10.0],
                "kernel": ["rbf", "linear"]
            }
        }
    },
    "api_config": {
        "base_url": "https://api.coingecko.com/api/v3",
        "rate_limit": {
            "calls_per_minute": 50,
            "pause_time": 1.2
        }
    },
    "feature_groups": {
        "technical": [
            "MA7", "MA30", "EMA7", "EMA30"
        ],
        "volatility": [
            "std_dev", "volatility", "atr"
        ],
        "momentum": [
            "momentum", "roc", "rsi", "stoch"
        ],
        "trend": [
            "trend", "macd", "adx"
        ],
        "seasonality": [
            "day_of_week", "month", "quarter"
        ]
    }
}
